<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- START: THIS IS THE ONLY THEME YOUR APP NEEDS -->
    <!-- It has a title bar and all your custom colors. -->
    <style name="Theme.PDFToolkit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- This sets the TITLE BAR color -->
        <item name="colorPrimary">@color/home_background</item>
        <!-- This sets the STATUS BAR color -->
        <item name="colorPrimaryVariant">@color/home_background</item>
        <!-- This sets the color of the text and icons in the title bar to black -->
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- This sets the main background color for all screens -->
        <item name="android:windowBackground">@color/home_background</item>
        <!-- This sets the bottom navigation bar color -->
        <item name="android:navigationBarColor">@color/soft_gray</item>
        
        <!-- This is a fallback for older devices -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!-- END: THIS IS THE ONLY THEME YOUR APP NEEDS -->

    <!-- Your styles for the Home Screen Cards remain the same -->
    <style name="HomeCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="HomeCardLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="HomeCardIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="HomeCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
