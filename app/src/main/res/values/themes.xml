<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

   <!--
    ===================================================================
    THIS IS THE FINAL, CORRECT SPLASH SCREEN THEME
    ===================================================================
    -->
   <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/home_background</item>
        
        <!--
        THIS IS THE FIX:
        It now points to our safe, transparent drawable.
        This has NO dependency on your launcher icon and WILL NOT crash the build.
        -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/transparent_drawable</item>

        <item name="postSplashScreenTheme">@style/Theme.PDFToolkit.NoActionBar</item>
    </style>

    <!--
    ===================================================================
    THESE ARE YOUR CORRECT, FINAL APP THEMES
    ===================================================================
    -->
    <style name="Theme.PDFToolkit.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="Theme.PDFToolkit.WithToolbar" parent="Theme.PDFToolkit.NoActionBar">
        <!-- This theme correctly inherits all necessary attributes -->
    </style>

    <!-- All other styles below are correct and unchanged -->
    <style name="Theme.PDFToolkit.Scanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="ToolbarTitle_Large" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ToolbarTitle_Small" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="HomeCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">12dp</item>
    </style>
    <style name="HomeCardLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="HomeCardIconStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="HomeCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>