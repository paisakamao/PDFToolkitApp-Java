<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- (Your App Themes remain unchanged and are correct) -->
    <style name="Theme.PDFToolkit.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/home_background</item>
        <item name="android:windowBackground">@color/home_background</item>
        <item name="android:navigationBarColor">@color/soft_gray</item>
    </style>
    <style name="Theme.PDFToolkit.WithToolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/home_background</item>
        <item name="android:windowBackground">@color/home_background</item>
    </style>
    <style name="Theme.PDFToolkit.Scanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="ToolbarTitle_Large" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ToolbarTitle_Small" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- === THESE ARE THE FINAL, CORRECT STYLES THAT MATCH YOUR "OLD" SCREENSHOT === -->
    <style name="HomeCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">12dp</item>
    </style>
    <style name="HomeCardLayoutStyle">
        <!-- This gives a fixed, uniform height that matches the old layout's proportions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="HomeCardIconStyle">
        <!-- This tells the icon to grow and fill all available vertical space -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="HomeCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>
