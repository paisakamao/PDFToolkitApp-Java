<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- THEME 1: FOR SCREENS WITHOUT A DEFAULT TITLE BAR (like your Home Screen) -->
    <style name="Theme.PDFToolkit" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- This theme sets the background and status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/home_background</item>
        <item name="android:windowBackground">@color/home_background</item>
        <item name="android:navigationBarColor">@color/soft_gray</item>
    </style>

    <!-- THEME 2: FOR SCREENS THAT NEED A TITLE BAR (like All Files & PDF Viewer) -->
    <style name="Theme.PDFToolkit.WithActionBar" parent="Theme.AppCompat.Light">
        <!-- Set the background color of the title bar to match the screen -->
        <item name="colorPrimary">@color/home_background</item>
        
        <!-- Set the color of the text in the title bar to black to be visible -->
        <item name="android:textColorPrimary">@color/black</item>
        
        <!-- Set the color of the status bar (the very top of the phone screen) -->
        <item name="colorPrimaryDark">@color/home_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/home_background</item>
    </style>

