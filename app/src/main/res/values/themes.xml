<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- This is the one and only theme for your entire application. -->
    <style name="Theme.PDFToolkit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- This sets the TITLE BAR color to your light background -->
        <item name="colorPrimary">@color/home_background</item>
        <!-- This sets the STATUS BAR color to your light background -->
        <item name="colorPrimaryVariant">@color/home_background</item>
        
        <!-- START: THIS IS THE CRITICAL FIX -->
        <!-- This sets the color of the text and icons in the title bar to BLACK -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- END: THIS IS THE CRITICAL FIX -->
        
        <item name="android:windowBackground">@color/home_background</item>
        <item name="android:navigationBarColor">@color/soft_gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Your styles for the Home Screen Cards remain the same -->
    <style name="HomeCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">12dp</item>
    </style>
    <!-- ... (the rest of your HomeCard styles go here) ... -->

</resources>
