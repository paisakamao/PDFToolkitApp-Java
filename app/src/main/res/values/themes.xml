<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- THEME 1: FOR SCREENS WITHOUT A DEFAULT TITLE BAR (like your Home Screen) -->
    <style name="Theme.PDFToolkit" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/home_background</item>
        <item name="android:windowBackground">@color/home_background</item>
        <item name="android:navigationBarColor">@color/soft_gray</item>
    </style>

    <!-- THEME 2: FOR SCREENS THAT NEED A TITLE BAR -->
    <style name="Theme.PDFToolkit.WithActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- This sets the TITLE BAR color -->
        <item name="colorPrimary">@color/home_background</item>
        <!-- This sets the STATUS BAR color -->
        <item name="colorPrimaryVariant">@color/home_background</item>
        <!-- This sets the color of the text and icons in the title bar to BLACK -->
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Your styles for the Home Screen Cards -->
    <style name="HomeCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">12dp</item>
    </style>
    <!-- ... (the rest of your HomeCard styles go here) ... -->

</resources>
