<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
    ===================================================================
    THIS IS THE SPLASH SCREEN THEME - IT IS NOW CORRECT AND STABLE
    ===================================================================
    -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- This sets the background color -->
        <item name="windowSplashScreenBackground">@color/home_background</item>
        
        <!-- This uses your app's normal launcher icon, which is the correct practice -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        
        <!-- This sets the duration for how long the splash screen stays visible -->
        <item name="windowSplashScreenAnimationDuration">1000</item> <!-- 1 second -->

        <!-- This is the theme that will be applied AFTER the splash is done -->
        <item name="postSplashScreenTheme">@style/Theme.PDFToolkit.NoActionBar</item>
    </style>

    <!--
    ===================================================================
    THIS IS YOUR CORRECTED BASE THEME
    ===================================================================
    - We are going back to your original, stable "Theme.AppCompat.Light.NoActionBar" parent.
    - We are adding the specific items needed for a full-screen, edge-to-edge display.
    -->
    <style name="Theme.PDFToolkit.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- These lines make the status and navigation bars transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- This makes the status bar icons (time, battery) dark, for your light background -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- This ensures all icons (like in your dialogs) are visible -->
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <!-- This theme now correctly inherits the full-screen properties -->
    <style name="Theme.PDFToolkit.WithToolbar" parent="Theme.PDFToolkit.NoActionBar"/>

    <!-- All other styles below are correct and unchanged -->
    <style name="Theme.PDFToolkit.Scanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="ToolbarTitle_Large" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"><item name="android:textSize">24sp</item><item name="android:textStyle">bold</item></style>
    <style name="ToolbarTitle_Small" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"><item name="android:textSize">20sp</item></style>
    <style name="HomeCardStyle"><item name="android:layout_width">0dp</item><item name="android:layout_height">wrap_content</item><item name="android:layout_columnWeight">1</item><item name="android:layout_margin">12dp</item></style>
    <style name="HomeCardLayoutStyle"><item name="android:layout_width">match_parent</item><item name="android:layout_height">180dp</item><item name="android:orientation">vertical</item><item name="android:gravity">center</item><item name="android:padding">8dp</item></style>
    <style name="HomeCardIconStyle"><item name="android:layout_width">120dp</item><item name="android:layout_height">120dp</item><item name="android:layout_marginBottom">12dp</item></style>
    <style name="HomeCardTextStyle"><item name="android:layout_width">wrap_content</item><item name="android:layout_height">wrap_content</item><item name="android:textColor">#000000</item><item name="android:textSize">16sp</item></style>
</resources>