<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- THEME 1: FOR SCREENS WITHOUT A DEFAULT TITLE BAR -->
    <!-- This will be used by your Home Screen and your WebViews. -->
    <style name="Theme.PDFToolkit.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/home_background</item>
        <item name="android:windowBackground">@color/home_background</item>
        <item name="android:navigationBarColor">@color/soft_gray</item>
    </style>

    <!-- THEME 2: FOR SCREENS THAT NEED A TITLE BAR -->
    <!-- This will be used by your "All Files" and "PDF Viewer" screens. -->
    <style name="Theme.PDFToolkit.WithActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- This sets the TITLE BAR color -->
        <item name="colorPrimary">@color/home_background</item>
        <!-- This sets the STATUS BAR color -->
        <item name="colorPrimaryVariant">@color/home_background</item>
        <!-- This sets the color of the text and icons in the title bar to BLACK -->
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- STYLES FOR THE HOME SCREEN CARDS -->
    <!-- These are now correctly located in this single file. -->
    <style name="HomeCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="HomeCardLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="HomeCardIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="HomeCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
