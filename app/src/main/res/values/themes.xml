<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- (Your App Themes like Theme.PDFToolkit.NoActionBar remain unchanged) -->
    <style name="Theme.PDFToolkit.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/home_background</item>
        <item name="android:windowBackground">@color/home_background</item>
        <item name="android:navigationBarColor">@color/soft_gray</item>
    </style>
    <style name="Theme.PDFToolkit.WithToolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/home_background</item>
        <item name="android:windowBackground">@color/home_background</item>
    </style>
    <style name="Theme.PDFToolkit.Scanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>


    <!-- STYLES FOR THE HOME SCREEN CARDS -->
    <style name="HomeCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="HomeCardLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130dp</item> <!-- Increased height slightly for better spacing -->
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- === THIS IS THE MODIFIED ICON STYLE === -->
    <style name="HomeCardIconStyle">
        <!-- Increased size from 48dp to 64dp for more impact -->
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <!-- Increased margin for better separation from the text -->
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- === THIS IS THE MODIFIED TEXT STYLE === -->
    <style name="HomeCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <!-- Increased text size for better readability -->
        <item name="android:textSize">16sp</item>
    </style>

</resources>
