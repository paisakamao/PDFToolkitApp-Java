<style name="Theme.PDFToolkit.FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Transparent status & nav bar -->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>

    <!-- Let content extend under system bars -->
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>

    <!-- For devices with display cutouts (notch/punch-hole) -->
    <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
</style>