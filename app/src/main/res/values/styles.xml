<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.PDFToolkitApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#1c222d</item>
        <item name="colorPrimaryVariant">#12151a</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorSecondary">#00ffff</item>
        <item name="android:statusBarColor" tools:targetApi="l">#0d0f14</item>
        <item name="android:windowBackground">#0d0f14</item>
    </style>

    <!-- Card Style for Tool Buttons -->
    <style name="ToolCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">#12151a</item>
    </style>

    <!-- Text Style inside Cards -->
    <style name="ToolCardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#e0e0e0</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
