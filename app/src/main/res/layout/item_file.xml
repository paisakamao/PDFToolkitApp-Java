<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/file_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"> <!-- 1. Padding decreased -->

        <!-- 2. Icon is on the left, opposite the text -->
        <ImageView
            android:id="@+id/icon_file_type"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_pdflist" />
        
        <!-- 5. Date and Time is on the far right -->
        <TextView
            android:id="@+id/text_file_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/file_details_text"
            android:textSize="12sp"
            tools:text="Jul 31, 06:30 PM"/>

        <!-- This container holds the name and size -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/text_file_date"
            android:layout_toEndOf="@id/icon_file_type"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <!-- 3. Filename is smaller, single line -->
            <TextView
                android:id="@+id/text_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="14sp" 
                android:textStyle="bold"
                tools:text="A very very long file name that would normally wrap.pdf" />

            <!-- 4. File size is below the filename -->
            <TextView
                android:id="@+id/text_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/file_details_text"
                android:textSize="12sp"
                tools:text="1.5 MB" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>