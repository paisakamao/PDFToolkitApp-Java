<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    tools:context=".HomeActivity">

    <!-- START: THIS IS THE CORRECTED TITLE -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="All Tools"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- END: THIS IS THE CORRECTED TITLE -->

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

        <!-- All your CardView buttons remain the same here... -->
        <!-- File Manager Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_file_manager"
            style="@style/HomeCardStyle"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout style="@style/HomeCardLayoutStyle">
                <ImageView style="@style/HomeCardIconStyle" android:src="@android:drawable/ic_all_files" />
                <TextView style="@style/HomeCardTextStyle" android:text="File" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- PDF Tool Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_pdf_tool"
            style="@style/HomeCardStyle"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout style="@style/HomeCardLayoutStyle">
                <ImageView style="@style/HomeCardIconStyle" android:src="@android:drawable/ic_pdf_tools" />
                <TextView style="@style/HomeCardTextStyle" android:text="Pdf Tool" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Scanner Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_scanner"
            style="@style/HomeCardStyle"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout style="@style/HomeCardLayoutStyle">
                <!-- THE LINE HAS BEEN UPDATED TO USE YOUR NEW ICON -->
                <ImageView style="@style/HomeCardIconStyle" android:src="@drawable/ic_scan_file" />
                <TextView style="@style/HomeCardTextStyle" android:text="Scanner" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- All Files Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_all_files"
            style="@style/HomeCardStyle"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout style="@style/HomeCardLayoutStyle">
                <ImageView style="@style/HomeCardIconStyle" android:src="@android:drawable/ic_menu_sort_by_size" />
                <TextView style="@style/HomeCardTextStyle" android:text="All Files" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Uni Tools Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_uni_tools"
            style="@style/HomeCardStyle"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout style="@style/HomeCardLayoutStyle">
                <ImageView style="@style/HomeCardIconStyle" android:src="@android:drawable/ic_menu_compass" />
                <TextView style="@style/HomeCardTextStyle" android:text="Uni Tools" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
