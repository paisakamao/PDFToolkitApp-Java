<RelativeLayout
    android:id="@+id/ad_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:padding="12dp"
    android:clipToOutline="true">

    <!-- Media -->
    <com.google.android.gms.ads.nativead.MediaView
        android:id="@+id/ad_media"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <!-- Headline -->
    <TextView
        android:id="@+id/ad_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_media"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Advertiser -->
    <TextView
        android:id="@+id/ad_advertiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_headline"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <!-- CTA + Ad badge group -->
    <LinearLayout
        android:id="@+id/cta_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_advertiser"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visit Site"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/ad_label_inline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:gravity="center_vertical"
            android:text="Ad"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_ad_label"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Ad badge fallback (bottom-right corner if CTA hidden) -->
    <TextView
        android:id="@+id/ad_label_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:text="Ad"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_ad_label"
        android:padding="4dp"
        android:visibility="gone" />

</RelativeLayout>
