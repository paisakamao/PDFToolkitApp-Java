<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PdfViewerActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <!--
        ===========================================================
        THIS IS THE FINAL FIX.
        We are giving the container a minimum height. This forces it
        to create the "placeholder" space on the screen. The AdView
        will then load into this visible space.
        The background color is for testing so we can see it.
        ===========================================================
    -->
    <RelativeLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:minHeight="50dp"
        android:background="#DDDDDD" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/ad_container"
        android:background="@color/soft_gray"
        android:padding="8dp">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</RelativeLayout>