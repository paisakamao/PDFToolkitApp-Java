<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions needed for the app -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PDF Toolkit"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.PDFToolkit">

        <!-- Activity 1: The Home Screen. This is the ONLY LAUNCHER. -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Activity 2: The WebView screen for your PDF tools. It is not a launcher. -->
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>

        <!-- Activity 3: The native screen for listing all files. It is not a launcher. -->
        <activity
            android:name=".AllFilesActivity"
            android:exported="false">
        </activity>

    </application>
</manifest>
